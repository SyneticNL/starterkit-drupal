<div class="pl-container pl-font--{{ name }}">
  <h3>Font: {{ font }}</h3>
  {% for style in styles %}
    <h4>Style: {{ style }}</h4>
    <div class="pl-block pl-font--{{ style }}">
      {% for weight in weights %}
        <p class="pl-font--{{ weight }}">
          font-weight {{ weight }}:<br>
          {{ string }}
        </p>
      {% endfor %}
    </div>
  {% endfor %}
</div>
